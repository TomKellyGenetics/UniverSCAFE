#	toCall: my ($chrom_size_hsh_ref) = &generateChromSizeHsh($chrom_size_path);
#	calledInLine: 145
#....................................................................................................................................................#
	
	my ($chrom_size_path) = @_;
	
	my $chrom_size_hsh_ref = {};
	open (CHROMSIZE, "<", $chrom_size_path);
